                    <!--New password textbox-->
                    <Frame
                        BackgroundColor="Transparent" 
                        Margin="0,15,0,0" 
                        HeightRequest="50" 
                        HorizontalOptions="Center"
                        WidthRequest="320" 
                        Padding="5" 
                        BorderColor="Black"
                        CornerRadius="50" 
                        x:Name="NewPassTextBox">
                        <StackLayout
                            Orientation="Horizontal">
                            <Frame
                                BackgroundColor="Transparent" 
                                CornerRadius="50" 
                                HeightRequest="35"
                                WidthRequest="35" 
                                Padding="6" 
                                Margin="0" 
                                HorizontalOptions="Start" 
                                BorderColor="Black">
                                <Image 
                                    Source="https://cdn-icons-png.flaticon.com/128/7155/7155663.png" 
                                    Aspect="AspectFill" 
                                    Margin="0" />
                            </Frame>
                            <Grid BackgroundColor="Transparent" HorizontalOptions="Start" WidthRequest="257">
                                <Entry 
                                Placeholder="New Password"
                                TextColor="Black" 
                                HorizontalOptions="FillAndExpand"
                                Margin="0,0,0,0" 
                                PlaceholderColor="Black" 
                               
                                Keyboard="Text" 
                                IsPassword="{Binding Source={x:Reference ShowPasswordActualTrigger}, 
                                 Path=HidePassword}" 
                               />
                                <ImageButton 
                                    VerticalOptions="Center" 
                                    Margin="0,0,13,0" 
                                    HeightRequest="30 "
                                    HorizontalOptions="End" 
                            Source="hide_eye_password_new.png" 
                                    BackgroundColor="Transparent" 
                                    CornerRadius="0">
                                    <ImageButton.Triggers>
                                        <EventTrigger Event="Clicked">
                                            <local:ShowPasswordTriggerAction ShowIcon="eye_password_new.png"
                                                                         HideIcon="hide_eye_password_new.png"
                                                                         x:Name="ShowPasswordActualTrigger"/>
                                        </EventTrigger>
                                    </ImageButton.Triggers>

                                </ImageButton>
                            </Grid>

                        </StackLayout>

                    </Frame>


                    <!--confirm password-->
                    <Frame
                        BackgroundColor="Transparent" 
                        Margin="0,15,0,0" 
                        HeightRequest="50" 
                        HorizontalOptions="Center"
                        WidthRequest="320" 
                        Padding="5" 
                        BorderColor="Black"
                        CornerRadius="50" 
                        x:Name="ConfirmTextBox">
                        <StackLayout
                            Orientation="Horizontal">
                            <Frame
                                BackgroundColor="Transparent" 
                                CornerRadius="50" 
                                HeightRequest="35"
                                WidthRequest="35" 
                                Padding="6" 
                                Margin="0" 
                                HorizontalOptions="Start" 
                                BorderColor="Black">
                                <Image 
                                    Source="https://cdn-icons-png.flaticon.com/128/7155/7155663.png" 
                                    Aspect="AspectFill" 
                                    Margin="0" />
                            </Frame>
                            <Grid BackgroundColor="Transparent"
                                  HorizontalOptions="Start" 
                                  WidthRequest="257">
                                <Entry 
                                Placeholder="Confirm Password"
                                TextColor="Black" 
                                HorizontalOptions="FillAndExpand"
                                Margin="0,0,0,0" 
                                PlaceholderColor="Black" 
                               
                                Keyboard="Text" 
                                IsPassword="{Binding Source={x:Reference ShowPasswordActualTrigger2}, 
                                 Path=HidePassword}" 
                               />
                                <ImageButton 
                                    VerticalOptions="Center" 
                                    Margin="0,0,13,0" 
                                    HeightRequest="30 "
                                    HorizontalOptions="End" 
                                    Source="hide_eye_password_new.png" 
                                    BackgroundColor="Transparent" 
                                    CornerRadius="0">
                                    <ImageButton.Triggers>
                                        <EventTrigger Event="Clicked">
                                            <local:ShowPasswordTriggerAction 
                                                ShowIcon="eye_password_new.png"                         
                                                HideIcon="hide_eye_password_new.png" 
                                                x:Name="ShowPasswordActualTrigger2"/>
                                        </EventTrigger>
                                    </ImageButton.Triggers>

                                </ImageButton>
                            </Grid>
                           
                        </StackLayout>

                    </Frame>

                              

                    <!--Submit button-->
                    <StackLayout 
                        BackgroundColor="Transparent" 
                        Margin="0,10"
                        HorizontalOptions="CenterAndExpand" 
                        HeightRequest="70" 
                        WidthRequest="330"
                        Padding="0">

                        <Button 
                            Text="Submit" 
                            TextColor="Black
                            " FontSize="Title" 
                            Padding="10"
                            BorderColor="Black" 
                            BorderWidth="1"
                            Margin="0,10"
                            FontAttributes="Bold" 
                            CornerRadius="40"
                            HorizontalOptions="Center"
                            WidthRequest="250"
                            x:Name="btn_login"
                            BackgroundColor="LightSkyBlue" 
                            TextTransform="None"/>
                    </StackLayout>


                    <!--current back to log in-->
                    <StackLayout
                        BackgroundColor="Transparent" 
                        Margin="0,30,0,0"
                        HeightRequest="30"
                        WidthRequest="130" 
                        HorizontalOptions="CenterAndExpand">
                        <Label
                            Text="Back to Login" 
                            TextDecorations="Underline" 
                            FontAttributes="None" 
                            FontSize="18
                            " x:Name="lbl_backtoLogin" 
                            TextColor="Black" >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped">

                                </TapGestureRecognizer>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>
          
                  
                

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
        
</ContentPage>