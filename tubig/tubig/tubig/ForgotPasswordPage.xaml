<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tubig.ForgotPasswordPage"
             NavigationPage.HasBackButton="False"
              xmlns:local="clr-namespace:tubig"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout 
                BackgroundColor="#F8E2CF">
                <StackLayout 
                    BackgroundColor="Transparent"
                    HeightRequest="200" 
                    HorizontalOptions="CenterAndExpand" 
                    WidthRequest="300"
                    Margin="0,30,0,0">
                    <Image Source="forgotpass_new" />

                </StackLayout>

          
                <StackLayout 
                    BackgroundColor="Transparent"
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="550" 
                    WidthRequest="350" 
                    Margin="0,10,0,0">
                    <StackLayout 
                        BackgroundColor="Transparent"
                        HorizontalOptions="CenterAndExpand" 
                        HeightRequest="50" 
                        WidthRequest="350">
                        <Label 
                            Text="Forgot password? Don't worry, we got you. Just enter your email address associated with your account below."
                            TextColor="Black" 
                            FontSize="16"
                            Padding="0" Margin="10,0,0,0" 
                            LineHeight="1.2" 
                            HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    
                    <!--select security question-->
                    <Frame 
                        BackgroundColor="Transparent" 
                        Margin="0,30" 
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        WidthRequest="320" 
                        Padding="5" 
                        BorderColor="Black" 
                        CornerRadius="50">
                        <StackLayout 
                            Orientation="Horizontal">
                            <Frame
                                BackgroundColor="Transparent"
                                CornerRadius="50"
                                HeightRequest="35"
                                WidthRequest="36"
                                Padding="7" 
                                Margin="0" 
                                HorizontalOptions="Start"
                                BorderColor="Black">
                                <Image 
                                    Source="https://icons.iconarchive.com/icons/icons8/ios7/256/Very-Basic-Help-Filled-icon.png" 
                                    Aspect="AspectFill" 
                                    Margin="0" />
                            </Frame>

                            <Picker 
                                Title="Select Security Question" 
                                TextColor="Black"
                                HorizontalOptions="StartAndExpand"
                                FontSize="Medium"
                                WidthRequest="250"
                                TitleColor="Black"
                                >
                                <Picker.Items >

                                    <x:String>
                                        Who is your first love?
                                    </x:String>
                                    <x:String>
                                        Asa ka nakaigit pag elementary?
                                    </x:String>

                                    <x:String>
                                        What is your Grandmother's name in your father side ?
                                    </x:String>

                                    <x:String>
                                        What is your Grandfather’s name in your father side?
                                    </x:String>

                                    <x:String>
                                        What is the name of your first dog?
                                    </x:String>

                                    <x:String>
                                        What subject did you fail?
                                    </x:String>

                                    <x:String>
                                        What was the name of the boy or the girl you first kissed?
                                    </x:String>

                                    <x:String>
                                        Where were you when you had your first kiss?
                                    </x:String>

                                    <x:String>
                                        What is the middle name of your youngest child/brother/sister?
                                    </x:String>

                                    <x:String>
                                        In what city or town did your mother and father meet?
                                    </x:String>
                                </Picker.Items>

                            </Picker>
                        </StackLayout>

                    </Frame>
                    
                    <!--answer-->
                    <Frame 
                        BackgroundColor="Transparent"
                        Margin="0,-15,0,0" 
                        HeightRequest="50" 
                        HorizontalOptions="Center" 
                        
                        WidthRequest="320" 
                        Padding="5" BorderColor="Black" 
                        CornerRadius="50">
                        <StackLayout 
                            Orientation="Horizontal">
                            <Frame 
                                BackgroundColor="Transparent" 
                                CornerRadius="50" 
                                HeightRequest="35"
                                WidthRequest="36" 
                                Padding="7" Margin="0" 
                                HorizontalOptions="Start"
                                BorderColor="Black">
                                <Image 
                                    Source="https://img.icons8.com/fluency-systems-filled/452/stack-exchange-answer.png" 
                                    Aspect="AspectFill" 
                                    Margin="0" />
                            </Frame>
                            <Entry 
                                Placeholder="Answer"
                                TextColor="Black" 
                                HorizontalOptions="FillAndExpand"
                                Margin="0,0,15,0" 
                                PlaceholderColor="Black" 
                                IsPassword="True" 
                                Keyboard="Text"/>
                        </StackLayout>

                    </Frame>

                   
